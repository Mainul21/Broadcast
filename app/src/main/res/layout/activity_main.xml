<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="153dp"
        android:layout_height="81dp"
        android:background="#5A5555"
        android:ellipsize="middle"
        android:text="@string/battery_percentage"
        android:textColorHighlight="#C51F1F"
        android:textColorLink="#CA1B1B"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.745"
        app:rippleColor="#D31A1A" />

    <Button
        android:id="@+id/button2"
        android:layout_width="153dp"
        android:layout_height="81dp"
        android:background="#5A5555"
        android:ellipsize="middle"
        android:text="@string/wifi_state"
        android:textColorHighlight="#C51F1F"
        android:textColorLink="#CA1B1B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintVertical_bias="0.207"
        app:rippleColor="#D31A1A" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="157dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="196dp"
        android:text="@string/select_one"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="153dp"
        android:layout_height="81dp"
        android:background="#5A5555"
        android:ellipsize="middle"
        android:text="@string/custom"
        android:textColorHighlight="#C51F1F"
        android:textColorLink="#CA1B1B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307"
        app:rippleColor="#D31A1A" />
</androidx.constraintlayout.widget.ConstraintLayout>